people = 20
cat = 30
dogs = 15

if people < cats
  puts "Too many cats"
end

if people > cats
  puts "Not many cats the world is saved"
end

if people < dogs
  puts "The world is drooled on"
end

if people > dogs
  puts "The World is dry."
end 

dogs += 5

if people >= dogs
  puts "People are greater then or equal to dogs."
end

if people <= dogs
  puts "People are less than or equal to dogs."
end

if people ==  dogs
  puts "People are dogs...."
end
